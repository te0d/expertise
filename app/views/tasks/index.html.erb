<div id="left_col">
  <h2>Tasks</h2>
  
  <table>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Hours</th>
    </tr>
  
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, task %></td>
      <td><%= task.desc %></td>
      <td><%= task.total_hours %></td>
    </tr>
  <% end %>
  </table>

  <br />
  
  <%= link_to 'New Task', new_task_path %>
</div>
<div id="right_col">
  <%= render "stats"%>
</div>