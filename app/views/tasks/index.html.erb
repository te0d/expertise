<div id="left_col">
  <h2>Tasks</h2>
  
  <table>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Hours</th>
      <th></th>
    </tr>
  
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= task.desc %></td>
      <td><%= task.total_hours %>
      <td><%= link_to 'Show', task %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />
  
  <%= link_to 'New Task', new_task_path %>
</div>
<div id="right_col">
  <%= render "stats"%>
</div>